@model QuanLyNhaHang_DATN.ViewModels.DangNhapViewModel

<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="DangNhap" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (ViewData.ModelState.ContainsKey(string.Empty))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData.ModelState[string.Empty].Errors.FirstOrDefault()?.ErrorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="TenTaiKhoan" class="form-label"></label>
                        <input asp-for="TenTaiKhoan" class="form-control" placeholder="Nhập tên tài khoản" />
                        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label"></label>
                        <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="rememberLogin" name="RememberMe" />
                        <label class="form-check-label" for="rememberLogin">Ghi nhớ đăng nhập</label>
                    </div>
                </div>

                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </form>

            <div class="text-center pb-3">
                <a href="#" class="text-decoration-none"
                   data-bs-toggle="modal"
                   data-bs-target="#registerModal"
                   data-bs-dismiss="modal">
                    Chưa có tài khoản? <strong>Đăng ký ngay</strong>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   @*  <partial name="_ValidationScriptsPartial" /> *@
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}