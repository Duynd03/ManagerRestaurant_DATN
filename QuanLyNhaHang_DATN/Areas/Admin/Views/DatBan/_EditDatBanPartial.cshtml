@model QuanLyNhaHang_DATN.ViewModels.DatBanViewModel

<div class="modal-header">
    <h5 class="modal-title">Cập nhật Đơn Đặt Bàn</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="editDatBanForm" method="post" data-ajax="true">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id) 
        <div class="form-group mb-3">
            <label class="form-label">Tên khách hàng <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.TenKhachHang, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.TenKhachHang, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", required = "required", pattern = @"\d{10}", title = "Số điện thoại phải có đúng 10 chữ số" })
            @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Thời gian đặt bàn <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.ThoiGianDatBan, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local", required = "required" })
            @Html.ValidationMessageFor(m => m.ThoiGianDatBan, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Số lượng người <span class="text-danger">*</span></label>
            @Html.TextBoxFor(m => m.SoLuongNguoi, new { @class = "form-control", type = "number", required = "required", min = "1" })
            @Html.ValidationMessageFor(m => m.SoLuongNguoi, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Ghi chú</label>
            @Html.TextAreaFor(m => m.GhiChu, new { @class = "form-control", rows = "3", placeholder = "Nhập ghi chú (nếu có)" })
            @Html.ValidationMessageFor(m => m.GhiChu, "", new { @class = "text-danger" })
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
</div>