    <script>
        $(document).ready(function () {
            $(document).off('click', '.logout-admin-link').on('click', '.logout-admin-link', function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                var token = $('#adminLogoutForm input[name="__RequestVerificationToken"]').val();
                $.ajax({
                    url: url,
                    method: "POST",
                    headers: { "RequestVerificationToken": token },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr) {
                        alert("Lỗi khi đăng xuất: " + xhr.status);
                    }
                });
            });
        });
    </script>

    <!-- Script xử lý SignalR -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/datBanHub")
            .withAutomaticReconnect()
            .configureLogging(signalR.LogLevel.Information)
            .build();

        let notifs = [];

        // Khởi tạo danh sách từ server khi load trang
        async function loadInitialNotifications() {
            try {
                const response = await fetch('/Admin/DatBan/GetUserNotifications', {
                    method: 'GET',
                    credentials: 'include'
                });
                const data = await response.json();
                if (data.success) {
                    notifs = data.data || [];
                    renderNotifications(notifs);
                }
            } catch (error) {
                console.error('Lỗi khi tải thông báo ban đầu:', error);
            }
        }

        // Nhận thông báo từ server
        connection.on("ReceiveBookingNotification", function (notif) {
            console.log("📥 Nhận thông báo từ server:", notif); // Thêm log để kiểm tra dữ liệu
            notifs.unshift(notif);
            renderNotifications(notifs);

            Swal.fire({
                icon: notif.loaiThongBao === "NEW" ? 'success' : notif.loaiThongBao === "HUY" ? 'warning' : 'info',
                title: 'Thông báo mới',
                text: notif.message || "(Không có nội dung)",
                timer: 3000,
                showConfirmButton: false
            });
        });

        // Hiển thị danh sách thông báo
        function renderNotifications(list) {
            $('.notif-center').empty();
            $('.notification').text(list.length);
            $('.dropdown-title').text(`You have ${list.length} new notification${list.length !== 1 ? 's' : ''}`);

            for (let notif of list) {
                const msg = notif.message || "(Không có nội dung)";
                const timeObj = new Date(notif.time);
                const timeStr = isNaN(timeObj) ? "--:--" : timeObj.toLocaleString('vi-VN');
                const datBanId = notif.datBanId || 0;

                let linkUrl = `/Admin/DatBan/DanhSachKhachHangChoXepBan?datBanId=${datBanId}`;
                if (notif.loaiThongBao === "XEPBAN" || notif.loaiThongBao === "CHUYENBAN")
                    linkUrl = `/Admin/DatBan/LichDatBan?datBanId=${datBanId}`;
                else if (notif.loaiThongBao === "HUY")
                    linkUrl = `/Admin/DatBan/LichSuDatBan?datBanId=${datBanId}`;

                $('.notif-center').append(`
                        <a href="${linkUrl}" class="dropdown-item">
                            <i class="fa fa-user-plus text-primary"></i> ${msg} <span>${timeStr}</span>
                        </a>
                    `);
            }
        }

        // Xóa toàn bộ thông báo
        function clearNotifications() {
            notifs = [];
            renderNotifications([]);
        }

        // Khởi chạy khi trang load
        document.addEventListener("DOMContentLoaded", () => {
            loadInitialNotifications();
            connection.start()
                .then(() => {
                    console.log("✅ SignalR connected");
                })
                .catch(err => {
                    console.error("❌ SignalR connection failed:", err);
                });
        });
    </script>

   
