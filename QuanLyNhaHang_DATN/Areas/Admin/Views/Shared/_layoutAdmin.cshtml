    <script>
        $(document).ready(function () {
            $(document).off('click', '.logout-admin-link').on('click', '.logout-admin-link', function (e) {
                e.preventDefault();
                var url = $(this).data('url');
                var token = $('#adminLogoutForm input[name="__RequestVerificationToken"]').val();
                $.ajax({
                    url: url,
                    method: "POST",
                    headers: { "RequestVerificationToken": token },
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr) {
                        alert("Lỗi khi đăng xuất: " + xhr.status);
                    }
                });
            });
        });
