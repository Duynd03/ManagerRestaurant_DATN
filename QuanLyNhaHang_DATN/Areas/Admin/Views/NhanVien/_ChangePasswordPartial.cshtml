@model QuanLyNhaHang_DATN.ViewModels.ChangePasswordViewModel

<div class="modal-header">
    <h5 class="modal-title">Đổi mật khẩu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="changePasswordForm" asp-action="ChangePassword" asp-controller="NhanVien" method="post" data-ajax="true">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.TaiKhoanId)

        <div class="form-group mb-3">
            <label class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Xác nhận mật khẩu <span class="text-danger">*</span></label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.validator.unobtrusive.parse("#changePasswordForm");
        });
    </script>
}